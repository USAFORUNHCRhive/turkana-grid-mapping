{
    "id": "miniconda",
    "version": "2.0.2",
    "name": "Miniconda (Python 3)",
    "description": "Develop Miniconda applications in Python 3. Installs dependencies from your environment.yml file and the Python extension.",
    "documentationURL": "https://github.com/devcontainers/templates/tree/main/src/miniconda",
    "publisher": "Dev Container Spec Maintainers",
    "licenseURL": "https://github.com/devcontainers/templates/blob/main/LICENSE",
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterPath": "/opt/conda/envs/demo"
        },
        "extensions": [
          "ms-python.python",
          "donjayamanne.python-extension-pack",
          "ms-toolsai.jupyter",
          "GitHub.codespaces",
          "ms-azuretools.vscode-docker",
          "DavidAnson.vscode-markdownlint"
        ]
      }
    },
    "platforms": [
        "Python",
        "Anaconda",
        "Miniconda"
    ],
    "optionalPaths": [
        ".github/*"
    ]
}
